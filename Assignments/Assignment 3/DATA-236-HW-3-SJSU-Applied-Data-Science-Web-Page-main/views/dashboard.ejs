<!DOCTYPE html>
<html>
<head>
    <title>Dashboard - ADS-SJSU</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body { background-color: #f8f9fa; }
        .navbar {
            background-color: #0055a2 !important;
            padding: 15px 0;
        }
        .welcome-section {
            background: white;
            padding: 30px 0;
            margin-bottom: 30px;
            border-bottom: 1px solid #eee;
        }
        .card {
            border: none;
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            transition: transform 0.2s;
            margin-bottom: 20px;
        }
        .card:hover { transform: translateY(-5px); }
        .course-card {
            padding: 20px;
            background: white;
        }
        .course-title {
            color: #0055a2;
            font-weight: 600;
            margin-bottom: 15px;
        }
        .btn-sjsu {
            background-color: #0055a2;
            color: white;
            border: none;
            padding: 8px 20px;
        }
        .btn-sjsu:hover {
            background-color: #004488;
            color: white;
        }
        .footer {
            margin-top: 50px;
            padding: 20px 0;
            background: #0055a2;
            color: white;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark">
        <div class="container">
            <a class="navbar-brand" href="/">ADS-SJSU</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="#" onclick="confirmLogout()">Logout</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="welcome-section">
        <div class="container">
            <h1>Welcome, <%= user.username %></h1>
            <p class="lead">Your Applied Data Science Dashboard</p>
        </div>
    </div>

    <div class="container">
        <div class="row">
            <% if (typeof courses !== 'undefined' && courses.length > 0) { %>
                <% courses.forEach(function(course) { %>
                    <div class="col-md-6 col-lg-4">
                        <div class="course-card card">
                            <h3 class="course-title"><%= course.name %></h3>
                            <p class="text-muted"><%= course.description %></p>
                            <div class="d-grid">
                                <a href="https://sjsu.edu/applied-data-science/msda/curriculum-courses/index.php" class="btn btn-sjsu">View Course</a>
                            </div>
                        </div>
                    </div>
                <% }); %>
            <% } else { %>
                <div class="col-12 text-center">
                    <div class="alert alert-info">
                        No courses available at the moment.
                    </div>
                </div>
            <% } %>
        </div>
    </div>

    <footer class="footer text-center">
        <div class="container">
            <p class="mb-0">&copy; 2025 Department of Applied Data Science - San Jose State University</p>
        </div>
    </footer>
    <script>
        function confirmLogout() {
            if (confirm('Are you sure you want to logout?')) {
                window.location.href = '/logout';
            }
        }
    </script>
</body>
</html>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>